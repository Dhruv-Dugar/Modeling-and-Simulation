% flux = 40
% k = 0.1
% T(z=0) = 313
% z(max) = 0.05
% Number of nodes = 10
L = 0.05;
N = 6;
x = linspace(0 , L, N);

delxsquare = (x(2) -x(1))^2;

A = zeros(N-1);
A(1,1) = 1;

for i =2:N-1
    A(i,i) = -2;
end

for i=2:N
    A(i, i-1) = 1;
    if (i - 1) == 1
        continue
    else
        A(i-1, i) = 1;
    end
end
A(6,5) = 2;
A(6,6) = -2;


B = [40; -400 * delxsquare; -400 * delxsquare; -400 * delxsquare; -400 * delxsquare; -400 ];

answer = inv(A) * B;

disp(answer)